files:
  "/opt/elasticbeanstalk/hooks/appdeploy/post/50_restart_sidekiq":
    mode: "000777"
    owner: root
    group: root
    content: |


      cd /var/app/current

      if [ -f /var/app/support/pids/sidekiq.pid ]
      then
        kill -TERM `cat /var/app/support/pids/sidekiq.pid`
        rm -rf /var/app/support/pids/sidekiq.pid
      fi

      . /opt/elasticbeanstalk/support/envvars.d/sysenv

      sleep 10

      EB_SCRIPT_DIR=$(/opt/elasticbeanstalk/bin/get-config container -k script_dir)
      EB_SUPPORT_DIR=$(/opt/elasticbeanstalk/bin/get-config container -k support_dir)

      . $EB_SUPPORT_DIR/envvars
      . $EB_SCRIPT_DIR/use-app-ruby.sh

      BUNDLE="/opt/rubies/ruby-2.2.3/bin/bundle"
      SIDEKIQ="/opt/rubies/ruby-2.2.3/bin/sidekiq"
      bundle exec sidekiq \
        -e production \
        -q default \
        -P /var/app/support/pids/sidekiq.pid \
        -C 2 \
        -L /var/app/support/logs/sidekiq.log \
        -d

      sleep 10

      bundle exec sidekiq \
        -e production \
        -q priority \
        -P /var/app/support/pids/sidekiq.pid \
        -C 2 \
        -L /var/app/support/logs/sidekiq.log \
        -d

  "/opt/elasticbeanstalk/hooks/appdeploy/pre/03_mute_sidekiq":
    mode: "000777"
    owner: root
    group: root
    content: |
      if [ -f /var/app/support/pids/sidekiq.pid ]
      then
        kill -USR1 `cat /var/app/support/pids/sidekiq.pid`
      fi

